<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/entry_outer_linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="2dp"
    android:paddingBottom="2dp"
    android:paddingRight="6dp"
    android:paddingLeft="6dp">

    <android.support.v7.widget.CardView

        android:elevation="6dp"
        app:cardCornerRadius="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:padding="12dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/entry_disaster_name_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Disaster name"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/entry_disaster_type_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Disaster Type" />

            <TextView
                android:id="@+id/entry_disaster_countries_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Countries affected" />

            <TextView
                android:id="@+id/entry_disaster_date_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="Date" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>